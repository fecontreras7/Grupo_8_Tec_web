<p id="notice"><%= notice %></p>

<div class="offset4">
	<h2>Detalle Cliente</h2>
	<p>
	  <b>Nombre:</b>
	  <%= @cliente.nombre %>
	</p>

	<p>
	  <b>Rut:</b>
	  <%= @cliente.rut %>
	</p>

	<p>
	  <b>Direccion:</b>
	  <%= @cliente.direccion %>
	</p>

	<p>
	  <b>Telefono:</b>
	  <%= @cliente.telefono %>
	</p>


	<div class="btn btn-primary"> <%= link_to 'Editar', edit_cliente_path(@cliente) %> </div>
	<div class="btn btn-danger"> <%= link_to 'Volver', clientes_path %> </div>
</div>