<%= form_for(@insumo) do |f| %>
  <% if @insumo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@insumo.errors.count, "error") %> prohibited this insumo from being saved:</h2>

      <ul>
      <% @insumo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>

  <label>Servicio</label>
  <br />
  <% array_servicios = Servicio.all.map { |servicio| [servicio.nombre, servicio.id]  } %>
    <% if @insumo.servicio_id.nil? %>
      <%= f.select(:servicio_id, array_servicios, :selected => :prompt, :prompt => '[Seleccionar Servicio]') %>
    <% else %>
      <%= f.select(:servicio_id, array_servicios) %>
  <% end %>  

  <div class="field">
    <%= f.label :costo %><br />
    <%= f.number_field :costo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
